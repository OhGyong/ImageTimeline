<resources>
    <!-- Base application theme. -->
    <style name="Theme.ImageRecordApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- 앱 바 없애기 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/app_icon_launcher</item>
    </style>

    <style name="Theme.ImageRecordApp.Splash" parent="Theme.SplashScreen">
        <!-- 스플래시 화면, 특정 단색으로 배경 채우기 -->
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <!-- 스플래시 화면, 아이콘 대체 이미지 삽입 -->
<!--        <item name="android:windowSplashScreenAnimatedIcon">@drawable/app_icon</item>-->
        <!-- 스플래시 화면, 스플래시 화면이 닫히기 전에 표시되는 시간 -->
<!--        <item name="android:windowSplashScreenAnimationDuration">2000</item>-->
    </style>
</resources>